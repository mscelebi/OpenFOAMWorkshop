FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

defaultFieldValues
(
    volScalarFieldValue alpha.water 0//only air in the domain
);

regions
(
    boxToCell
    {
        box (-1 -1 -0.5) (1 1 -0.25);
        fieldValues
        (
            volScalarFieldValue alpha.water 1//we set our block of water into the domain
        );
    }
);


